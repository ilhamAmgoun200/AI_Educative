{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Educational lessons with content and resources"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "content": {
      "type": "text"
    },
    "pdf_url": {
      "type": "text"
    },
    "video_url": {
      "type": "text"
    },
    "order_no": {
      "type": "integer"
    },
    "is_published": {
      "type": "boolean",
      "default": false
    },
    "subject": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subject.subject",
      "inversedBy": "lessons"
    },
    "ai_sessions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ai-session.ai-session",
      "mappedBy": "lesson"
    },
    "assessments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::assessment.assessment",
      "mappedBy": "lesson"
    },
    "progresses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::progress.progress",
      "mappedBy": "lesson"
    }
  }
}
