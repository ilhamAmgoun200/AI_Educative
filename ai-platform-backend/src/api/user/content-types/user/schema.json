{
  "kind": "collectionType",
  "collectionName": "users",
  "info": {
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User",
    "description": "Educational platform users (students, teachers, admins)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "username": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "password": {
      "type": "password",
      "required": true,
      "minLength": 6
    },
    "role": {
      "type": "enumeration",
      "enum": ["student", "teacher", "admin"],
      "default": "student"
    },
    "level": {
      "type": "string",
      "maxLength": 50
    },
    "avatar_url": {
      "type": "string",
      "maxLength": 255
    },
    "prefs": {
      "type": "json"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "subjects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::subject.subject",
      "mappedBy": "author"
    },
    "ai_sessions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ai-session.ai-session",
      "mappedBy": "user"
    },
    "assessments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::assessment.assessment",
      "mappedBy": "user"
    },
    "progresses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::progress.progress",
      "mappedBy": "user"
    },
    "notifications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::notification.notification",
      "mappedBy": "user"
    }
  }
}
